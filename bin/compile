#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Fail fast
set -e
set -o pipefail

# Debug
# set -x
BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Downloading dd-trace-php datadog-setup.php file"
cd $CACHE_DIR
curl -LO https://github.com/DataDog/dd-trace-php/releases/latest/download/datadog-setup.php 

if [ -s "$CACHE_DIR/datadog-setup.php" ]; then
  echo "-----> Installing APM + ASM"
  php "$CACHE_DIR/datadog-setup.php" --install-dir="$BUILD_DIR/datadog" --php-bin=all --enable-appsec

  echo "-----> Removing datadog-setup.php file"
  rm -f "$CACHE_DIR/datadog-setup.php"
else
  echo "-----> datadog-setup.php file not found"
fi
